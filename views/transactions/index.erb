<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body class="table">
    <table>
      <h1>Transactions</h1>

      <tr>
        <th></th>
        <th>Merchant</th>
        <th>Tag</th>
        <th>Amount</th>
      </tr>

        <% for transaction in @transactions %>

        <tr>
          <td>
          <a href="/transactions/<%= transaction.id %>">Edit Transaction</a>
          </td>
          <td>
            <%= transaction.merchants.name %>
          </td>
          <td>
            <%  for tag in transaction.tags %>
            <%= tag.type %>
          </td>
          <td>
            <%= transaction.amount %>
          </td>
            <% end %>
        </tr>

        <% end %>
        <div class="transaction-links">
          <a href="transactions/new">New transaction</a>
        </div>
        <h1 class="budget">Budget: <%= @budget.cash %></h1>
    </table>
    <h1 class="total">Total: <%= @total %></h1>

  </body>
</html>
